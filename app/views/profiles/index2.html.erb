<div class="profile_index2">
<style>
.card {
	display: inline-block;
	margin-left: 10px;
	margin-right: 10px;
}

h3.centered {
 	margin-left: auto;
    margin-right: auto;
	padding-bottom: 40px;
    width: 25em;
}

h1.margined {
	padding-top: 40px;
	padding-bottom: 40px;
}

</style>

<%# nav bar %>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
   <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
		<div class="navbar-nav">
		  <% @profiles.each do |profile| %>
				<% if current_user.email.eql? profile.email %>
					<div class="btn btn-light"> <%= link_to("View Your Profile", profile_path(profile), :class => "btn", style: "color: dark grey") %></div>
				<% end %>
		  <% end %>
		</div>
   </div>
</nav>

<div class="profile_index">
	<div class = "container-fluid">
		<% flash.each do |key, value| %>
			<div class="flash-notice <%= key %>"><%= value %></div>
		  <% end %>
		<h1 style = "text-align: center" class = "margined">Welcome to FishCamp Partnership Matcher!</h1>

		<h3 class = "centered"> Below are all of your fellow Fish Camp chairs. Click on a profile below to connect with one of your potential partners!</h2>
	</div>

	<table class="listing" summary="Profile List">
		<% @profiles.each do |profile| %>
			<div class="card" style="width: 18rem;">
				<div class="card-body">
					<h5 class="card-title"><%= profile.name%></h5>
						<p class="card-text">Not sure what exactly will go in here yet. May be an optional bio or contact information.</p>
						<div class="btn btn-secondary btn-sm"> <%= link_to("View Profile", profile_path(profile), :class => "btn", style: "color: white") %></div>
				</div>
			</div>
		<% end %>
	</table>



</div>