<style>
	.card {
			display: inline-block;
			margin-left: 10px;
			margin-right: 10px;
			width: 250px;
			height: 440px;
			opacity: 0.75;
			background-repeat: no-repeat;
			background-color: maroon;
			border: 20px solid rgba(0, 0, 0, 0.2);
		}
	.btn {
		background-color: lightSlateGrey;
		text-color: white;
	}
	#home-button{
		border: 4px solid rgba(0, 0, 0, 0.2);
		margin:5px;
		background color: lightSlateGrey;
	}
	#create-button{
		border: 4px solid rgba(0, 0, 0, 0.2);
		margin:5px;
		background color: lightSlateGrey;
	}
	body {
		background-color: wheat;
		width: 100%;
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}
</style>

<% flash.each do |key, value| %>
			<div class="flash-notice <%= key %>"><%= value %></div>
<% end %>

<hr class="mt-3"/>
<div class="card text-white mb-3" style="width: 500px; height: 1350px"; margin:20px;">
	<div class="card-body">
		<h2 class="card-title">Hello!</h2>
		<p class="card-text">Tell us a little bit about yourself.</p>
		<%= form_for(@profile) do |f| %>
			<%= render(:partial => "form", :locals => {:f => f}) %>
			<%= f.hidden_field(:approvedchair, value: false) %>
			<%= f.hidden_field(:user_id, value: current_user.id) %>
			<%= f.submit("Create Profile", class: "btn btn-sm", id: "create-button") %>
		<% end %>
	</div>
</div>
<br>

<div id="home-button" class="btn btn-sm" > <%= link_to("Home", profiles_path(), :class => "btn") %></div>
