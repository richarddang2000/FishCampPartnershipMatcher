<style>
	.card {
			display: inline-block;
			margin-left: 10px;
			margin-right: 10px;
			opacity: 0.75;
			background-repeat: no-repeat;
			background-color: maroon;
			border: 20px solid rgba(0, 0, 0, 0.2);
		}
	#card-button {
		border: 4px solid rgba(0, 0, 0, 0.2);
	}
	#home-button{
		opacity: 0.75;
		border: 4px solid rgba(0, 0, 0, 0.2);
		margin:5px;
	}
	#create-button{
		border: 4px solid rgba(0, 0, 0, 0.2);
		margin:5px;
	}
	body {
		background-color: wheat;
		width: 100%;
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}
</style>

<% flash.each do |key, value| %>
			<div class="flash-notice <%= key %>"><%= value %></div>
<% end %>

<hr class="mt-3"/>
<div class="card text-white mb-3" style="width: 500px"; margin:20px;">
	<div class="card-body">
		<h2 class="card-title">Hello!</h2>
		<p class="card-text">Tell us a little bit about yourself.</p>
		<%= form_for(@profile) do |f| %>
			<%= render(:partial => "form", :locals => {:f => f}) %>
            <!-- Grabs user's current id to link to profile -->
			<%= f.hidden_field(:user_id, value: current_user.id) %>
			<br>
			<%= f.submit("Create Profile", class: "btn btn-sm", id: "create-button", style: "background-color: Peru; color: SeaShell;") %>
		<% end %>
	</div>
</div>
<br>
