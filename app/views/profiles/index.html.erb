
	<style>
		.card {
			display: inline-block;
			margin-left: 10px;
			margin-right: 10px;
			width: 250px;
			height: 440px;
			opacity: 0.75;
			background-repeat: no-repeat;
			background-color: maroon;
			border: 20px solid rgba(0, 0, 0, 0.2);
		}
		#card-button {
			border: 4px solid rgba(0, 0, 0, 0.2);
		}
		h3.centered {
			margin-left: auto;
			margin-right: auto;
			padding-bottom: 40px;
			width: 25em;
		}

		h1.margined {
			padding-top: 40px;
			padding-bottom: 40px;
		}
		.carousel {
			width: 300px;
			height: 450px;
		}	
		body {
			background-color: wheat;
			width: 100%;
			background-position: center;
			background-repeat: no-repeat;
			background-size: cover;
		}
		.carousel-inner {
			width: 700px;
			height: 500px;
		}


	</style>

<%# nav bar %>
<nav class="navbar navbar-expand-lg navbar-light" style="background-color: maroon; opacity: 0.6;
	border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
   <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
		<div class="navbar-nav">
		  <% @profiles.each do |profile| %>
				<% if current_user.email.eql? profile.email %>
					<div class="btn btn-light"> <%= link_to("View Your Profile", profile_path(profile), :class => "btn", style: "color: dark grey") %></div>
				<% end %>
		  <% end %>
		  <div class="btn btn-light"> <%= link_to("Create New Profile", new_profile_path, :class => "btn", style: "color: dark grey") %><br/></div>
		</div>
   </div>
</nav>

	<div class="profile_index">
			<div class = "container-fluid" style="font-family:Georgia">
				<% flash.each do |key, value| %>
					<div class="flash-notice <%= key %>"><%= value %></div>
				  <% end %>
				<br>
				<h1 style = "text-align: center">Welcome.</h1>
				<br>
				<hr style = "border: 1px solid black; width: 85%;">
				<br>
				<h3 class = "margined" style="text-align: center">Below, you will be able to learn about <b>ALL</b> of your potentially <b>PERFECT</b> partners.</h2>
			</div>
			<br><br><br><br>
		
		
		<div class = "container-fluid">
			<div class = "row">
				<div id="carouselExampleControls" class="carousel slide" data-ride="carousel" style="left: 20%;">
				  <div class="carousel-inner">
					<div class="carousel-item active">
						<div class="card text-white mb-3" style="width: 18rem; margin:20px;">
							<div class="card-body">
								<h5 class="card-title">Hello!</h5>
									<p class="card-text">Swipe to find your perfect partner.</p>
							</div>
							
						</div>
					
						<div class="card text-white mb-3" style="width: 18rem; margin:20px; visibility: hidden;">
							<div class="card-body">
								<h5 class="card-title">Hello!</h5>
									<p class="card-text">Swipe to find your perfect partner.</p>
							</div>
						</div>
					</div>
										
					<% @profiles.each do |profile| %>
						<div class = "carousel-item">
							<div class="card text-white mb-3" style="width: 18rem; margin:20px">
								<div class="card-body">
									<h5 class="card-title"><%= profile.name%></h5>
										<img src="https://mdbootstrap.com/img/new/standard/city/053.jpg" class="rounded-circle" alt="default profile pic" width="160" height="160"> 
										<p class="card-text">Not sure what exactly will go in here yet. May be an optional bio or contact information.</p>
										<div id = "card-button" class="btn btn-sm" style="background-color: lightSlateGrey"> <%= link_to("View Profile", profile_path(profile), :class => "btn", style: "color: white") %></div>
								</div>
							</div>
							
							<div class="card text-white mb-3" style="width: 18rem; margin:20px">
								<div class="card-body" style = "visibility:hidden;">
									<h5 class="card-title"><%= profile.name%></h5>
										<img src="https://mdbootstrap.com/img/new/standard/city/053.jpg" class="rounded-circle" alt="default profile pic" width="160" height="160"> 
										<p class="card-text">Not sure what exactly will go in here yet. May be an optional bio or contact information.</p>
										<div id = "card-button" class="btn btn-sm" style="background-color: lightSlateGrey"> <%= link_to("View Profile", profile_path(profile), :class => "btn", style: "color: white") %></div>
								
								</div>
							</div>
						</div>
					
					<% end %>
					
				  </div>
				  <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev" style="left: 3%">
					<span class="carousel-control-prev-icon" aria-hidden="true"></span>
					<span class="sr-only">Previous</span>
				  </a>
				  <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next" style="left: 92%">
					<span class="carousel-control-next-icon" aria-hidden="true"></span>
					<span class="sr-only">Next</span>
				  </a>
				</div>
			</div>
		</div>
		<br><br><br><br>
		
	



</div>