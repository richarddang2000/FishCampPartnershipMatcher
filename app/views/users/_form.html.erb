<p><%= error_messages_for(form.object) %></p>

<div class="name-field">
  <%= form.label :name %>
  <%= form.text_field :name, placeholder: 'Enter full name' %>
</div>

<div class="text-field">
  <%= form.label :email %>
  <%= form.text_field :email, type: 'email' %>
</div>

<div class="password-field">
  <%= form.label :password %>
  <%= form.password_field :password %>
</div>