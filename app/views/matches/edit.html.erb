<h1 class="my-4">Find Match</h1>
<%= form_for(@match) do |f| %>
  <div class="row">
    <!-- Selector Card -->
    <div class="col-6">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-4"><%= @selector.name %></h2>
        </div>

        <ul class="list-group list-group-flush">
          <!-- Preferences -->
          <li class="list-group-item">
            <h4 class="mb-3">Preferences</h4>
            <% @selector_preferences.each do |preference| %>
              <div class="form-inline">
                <h6><%= @info.where(user_id: preference.selected_id).first.name %></h6>
                <h6 class="text-primary ml-2"><%= preference.rating %></h6>
              </div>
              <p> <%= preference.why %> </p>
            <% end %>
          </li>

          <!-- Anti-Preferences -->
          <li class="list-group-item">
            <h4 class="mb-3">Anti-Preferences</h4>
            <% @selector_anti_preferences.each do |anti_preference| %>
              <div class="form-inline">
                <h6 class="text-danger"><%= @info.where(user_id: anti_preference.selected_id).first.name %></h6>
              </div>
              <p><%= anti_preference.why %></p>
            <% end %>
          </li>

          <!-- Responses -->
          <li class="list-group-item">
            <h4 class="mb-3">Responses</h4>
            <% question_num = 1 %>
            <% @questions.each do |question| %>
              <h6><%= question_num %>. <%= question.question %></h6>
              <p><%= get_answer(@selector_answers.where(question_id: question.id).first) %></p>
              <% question_num = question_num + 1 %>
            <% end %>
          </li>
        </ul>
      </div>
    </div>

    <!-- Selected Cards -->
    <%= f.hidden_field(:id, value: @match.id) %>
    <%= f.hidden_field(:user_id, value: @match.user_id) %>
    <%= f.hidden_field(:preference_form_id, value: @match.preference_form_id) %>
    <%= f.hidden_field(:prospects_ids, value: @match.prospects_ids) %>
    
    <div id="carouselExampleControls" class="col-6 carousel slide" data-ride="carousel" data-interval="false">
      <div class="carousel-inner">
        <% prospect_count = 0 %>
        <% @match.prospects_ids.each do |prospect_id| %>
          <% prospect_count = prospect_count + 1 %>
          <% if prospect_count == 1 %>
            <div class="carousel-item active">
              <div class="card">
                <div class="card-header d-flex justify-content-between">
                  <h2 class="mb-4"><%= @selected.where(user_id: prospect_id).first.name %></h2>
                  <%= f.hidden_field(:matched_id, value: prospect_id) %>
                  <%= f.submit("Match", class: "btn btn-success my-1") %>
                </div>

                <ul class="list-group list-group-flush">
                  <!-- Preferences -->
                  <li class="list-group-item">
                    <h4 class="mb-3">Preferences</h4>
                    <% @selected_preferences.where(selector_id: prospect_id).each do |preference| %>
                      <div class="form-inline">
                        <h6><%= @info.where(user_id: preference.selected_id).first.name %></h6>
                        <h6 class="text-primary ml-2"><%= preference.rating %></h6>
                      </div>
                      <p> <%= preference.why %> </p>
                    <% end %>
                  </li>

                  <!-- Anti-Preferences -->
                  <li class="list-group-item">
                    <h4 class="mb-3">Anti-Preferences</h4>
                    <% @selected_anti_preferences.where(selector_id: prospect_id).each do |anti_preference| %>
                      <div class="form-inline">
                        <h6 class="text-danger"><%= @info.where(user_id: anti_preference.selected_id).first.name %></h6>
                      </div>
                      <p><%= anti_preference.why %></p>
                    <% end %>
                  </li>

                  <!-- Responses -->
                  <li class="list-group-item">
                    <h4 class="mb-3">Responses</h4>
                    <% question_num = 1 %>
                    <% @questions.each do |question| %>
                      <h6><%= question_num %>. <%= question.question %></h6>
                      <p><%= get_answer(@selected_answers.where(user_id: prospect_id, question_id: question.id).first) %></p>
                      <% question_num = question_num + 1 %>
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>
          <% else %>
            <div class="carousel-item">
              <div class="card">
                <div class="card-header d-flex justify-content-between">
                  <h2 class="mb-4"><%= @selected.where(user_id: prospect_id).first.name %></h2>
                  <%= f.hidden_field(:matched_id, value: prospect_id) %>
                  <%= f.submit("Match", class: "btn btn-success my-1") %>
                </div>

                <ul class="list-group list-group-flush">
                  <!-- Preferences -->
                  <li class="list-group-item">
                    <h4 class="mb-3">Preferences</h4>
                    <% @selected_preferences.where(selector_id: prospect_id).each do |preference| %>
                      <div class="form-inline">
                        <h6><%= @info.where(user_id: preference.selected_id).first.name %></h6>
                        <h6 class="text-primary ml-2"><%= preference.rating %></h6>
                      </div>
                      <p> <%= preference.why %> </p>
                    <% end %>
                  </li>

                  <!-- Anti-Preferences -->
                  <li class="list-group-item">
                    <h4 class="mb-3">Anti-Preferences</h4>
                    <% @selected_anti_preferences.where(selector_id: prospect_id).each do |anti_preference| %>
                      <div class="form-inline">
                        <h6 class="text-danger"><%= @info.where(user_id: anti_preference.selected_id).first.name %></h6>
                      </div>
                      <p><%= anti_preference.why %></p>
                    <% end %>
                  </li>

                  <!-- Responses -->
                  <li class="list-group-item">
                    <h4 class="mb-3">Responses</h4>
                    <% question_num = 1 %>
                    <% @questions.each do |question| %>
                      <h6><%= question_num %>. <%= question.question %></h6>
                      <p><%= get_answer(@selected_answers.where(user_id: prospect_id, question_id: question.id).first) %></p>
                      <% question_num = question_num + 1 %>
                    <% end %>
                  </li>
                </ul>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
  </div>
<% end %>