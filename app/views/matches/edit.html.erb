<h1 class="my-4">Find Match</h1>
<div class="row">
  <!-- Selector Card -->
  <div class="col-6">
    <div class="card">
      <div class="card-header">
        <h2 class="mb-4"><%= @selector.name %></h2>
      </div>

      <ul class="list-group list-group-flush">
        <!-- Preferences -->
        <li class="list-group-item">
          <h4 class="mb-3">Preferences</h4>
          <% @selector_preferences.each do |preference| %>
            <div class="form-inline">
              <h6><%= @info.where(user_id: preference.selected_id).first.name %></h6>
              <h6 class="text-primary ml-2"><%= preference.rating %></h6>
            </div>
            <p> <%= preference.why %> </p>
          <% end %>
        </li>

        <!-- Anti-Preferences -->
        <li class="list-group-item">
          <h4 class="mb-3">Anti-Preferences</h4>
          <% @selector_anti_preferences.each do |anti_preference| %>
            <div class="form-inline">
              <h6 class="text-danger"><%= @info.where(user_id: anti_preference.selected_id).first.name %></h6>
            </div>
            <p><%= anti_preference.why %></p>
          <% end %>
        </li>

        <!-- Responses -->
        <li class="list-group-item">
          <h4 class="mb-3">Responses</h4>
          <% question_num = 1 %>
          <% @questions.each do |question| %>
            <h6><%= question_num %>. <%= question.question %></h6>
            <p><%= get_answer(@selector_answers.where(question_id: question.id).first) %></p>
            <% question_num = question_num + 1 %>
          <% end %>
        </li>
      </ul>
    </div>
  </div>

