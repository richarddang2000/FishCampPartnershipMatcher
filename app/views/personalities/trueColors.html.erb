<style> 
	.center {
	  margin: 0 auto;
	  width: 80%;
	  padding: 10px;
	}
	.card {
			display: inline-block;
			margin-left: 10px;
			margin-right: 10px;
			width: 400px;
			opacity: 0.75;
			background-repeat: no-repeat;
			background-color: maroon;
			border: 20px solid rgba(0, 0, 0, 0.2);
			font-family: Georgia;
		}
	#card-button {
			border: 4px solid rgba(0, 0, 0, 0.2);
	}
	body {
		background-color: wheat;
		width: 100%;
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}
	#card-button {
			border: 4px solid rgba(0, 0, 0, 0.2);
	}
</style>

<div class = "container-fluid" style="font-family:Georgia">
	<% flash.each do |key, value| %>
		<div class="flash-notice <%= key %>"><%= value %></div>
	 <% end %>
	<br>
	<h2 style = "text-align:center; margin-top: 45px;"><b>Your True Color: <%= @userProfile.pttruecolors %></b></h2>
	<br>
	<hr style = "border: 1px solid black; width: 85%;">
	<br>
	<h3 class = "margined" style = "text-align: center; margin-bottom:75px;"> Below, you will find the true colors
	of you potential partners</h3>
</div>


