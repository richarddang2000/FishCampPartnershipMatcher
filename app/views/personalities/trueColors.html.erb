
<style> 
	.center {
	  margin: 0 auto;
	  width: 80%;
	  padding: 10px;
	}
	.card {
		display: inline-block;
		margin-left: 10px;
		margin-right: 10px;
		width: 250px;
		opacity: 0.75;
		background-repeat: no-repeat;
		background-color: maroon;
		color: white;
		border: 20px solid rgba(0, 0, 0, 0.2);
	}
	#card-button {
		opacity: 0.95;
		border: 4px solid rgba(0, 0, 0, 0.2);
	}
	h3.centered {
		margin-left: auto;
		margin-right: auto;
		padding-bottom: 40px;
		width: 25em;
	}

	h1.margined {
		padding-top: 40px;
		padding-bottom: 40px;
	}	
	body {
		background-color: wheat;
		width: 100%;
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}
</style>
<body>
	<div class = "container-fluid" style="font-family:Georgia">
		<% flash.each do |key, value| %>
			<div class="flash-notice <%= key %>"><%= value %></div>
		 <% end %>
		<br>
		<h2 style = "text-align:center; margin-top: 45px;"><b>Your True Color: <%= @userProfile.pttruecolors %></b></h2>
		<br>
		<hr style = "border: 1px solid black; width: 85%;">
		<br>
		<h3 class = "margined" style = "text-align: center; margin-bottom:75px;"> Below, you will find the true colors
		of you potential partners</h3>
	</div>
	
	<!------------------------------------------->
	
	<div class="container">
        <div class="row">
            <div class="col-lg-6 mb-4">
                <div class="card text-center text-white mb-3">
					<div class="card-body">						
						<div id = "card-button" class="btn btn-sm" style="background-color: maroon; color: white;"><h4>Other <%= @userProfile.pttruecolors %> Users</h4></div>
						<table class="listing" summary="Same Color">
							<% @sameProfiles.each do |same| %>
								<hr style = "border: 1px solid brown; width: 100%; opacity: 0.9;">								
								<%= link_to(same.name, profile_path(same), :class => "btn", style: "color: white; font-weight: bold;") %>
								<p class="card-text"><%= same.pttruecolors %></p>
								
							<% end %>
							<hr style = "border: 1px solid brown; width: 100%; opacity: 0.9;">
						</table>
					</div>
				</div>
            </div>
            <div class="col-lg-6 mb-4">
                <div class="card text-center text-white mb-3">
					<div class="card-body">
						<% if @userProfile.pttruecolors.eql? "Orange" %>
							<div id = "card-button" class="btn btn-sm" style="background-color: maroon; color: white;"><h4>Gold Users</h4></div>
						<% elsif @userProfile.pttruecolors.eql? "Blue" %>
							<div id = "card-button" class="btn btn-sm" style="background-color: maroon; color: white;"><h4>Gold Users</h4></div>
