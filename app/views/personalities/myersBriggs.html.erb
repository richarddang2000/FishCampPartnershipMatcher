
<style> 
	.center {
	  margin: 0 auto;
	  width: 80%;
	  padding: 10px;
	}
	.card {
			display: inline-block;
			margin-left: 10px;
			margin-right: 10px;
			width: 400px;
			opacity: 0.75;
			background-repeat: no-repeat;
			background-color: maroon;
			border: 20px solid rgba(0, 0, 0, 0.2);
			font-family: Georgia;
		}
	#card-button {
			border: 4px solid rgba(0, 0, 0, 0.2);
	}
	body {
		background-color: wheat;
		width: 100%;
		background-position: center;
		background-repeat: no-repeat;
		background-size: cover;
	}
	#card-button {
			border: 4px solid rgba(0, 0, 0, 0.2);
	}
</style>

<div class = "container-fluid" style="font-family:Georgia">
	<% flash.each do |key, value| %>
		<div class="flash-notice <%= key %>"><%= value %></div>
	 <% end %>
	<br>
	<h2 style = "text-align:center; margin-top: 45px;"><b>Myers Briggs</b></h2>
	<br>
	<hr style = "border: 1px solid black; width: 85%;">
	<br>
	<h3 class = "margined" style = "text-align: center; margin-bottom:75px;">Here, you can find all of your ideal matches
	based off of your Myers Briggs test. </h3>
</div>


<div class = "center">
	<div id = "match-card" class="card text-center text-white mb-3" style="width: 90%; height: 10%; margin: 20px;">
		<div class="card-body">
				<div id = "card-button" class="btn btn-sm" style="background-color: maroon; color: white;"><h1> Your Personality Type: <%= @userProfile.ptmyersbriggs %> </h1></div>
		</div>
	</div>
</div>
<br><br><br>

<!--- match cards -->
<div>
	<div class="card text-center text-white mb-3">
		<div class="card-body">
			<div id = "card-button" class="btn btn-sm" style="background-color: maroon; color: white;"><h3>Ideal Matches: </h3></div>
			<table class="listing" summary="Ideal Match List">
				<% @idealMatches.each do |idealMatch| %>
						<h5 class="card-title"><%= idealMatch.name%></h5>
							<p class="card-text"><%= idealMatch.ptmyersbriggs %></p>
							<div class="btn btn-secondary btn-sm"> <%= link_to("View Profile", profile_path(idealMatch), :class => "btn", style: "color: white") %></div>
				<% end %>
				<br>
			</table>
		</div>
		</div>
	</div>
		
	<div class="card text-center text-white mb-3">
		<div class="card-body">
			<div id = "card-button" class="btn btn-sm" style="background-color: maroon; color: white;"><h3>Good Matches: </h3></div>
			<table class="listing" summary="Good Match List">
				<% @goodMatches.each do |goodMatch| %>
						<h5 class="card-title"><%= goodMatch.name%></h5>
							<p class="card-text"><%= goodMatch.ptmyersbriggs %></p>
							<div class="btn btn-secondary btn-sm"> <%= link_to("View Profile", profile_path(goodMatch), :class => "btn", style: "color: white") %></div>
				<% end %>
			</table>
		</div>
	</div>
	<br><br>
	<div class="btn btn-secondary btn-sm"> <%= link_to("Home", personalities_path, :class => "btn", style: "color: white;") %></div>
	<br><br>
	
</div>

