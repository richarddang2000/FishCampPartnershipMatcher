
<h2 class="heading">Delete Response</h2>

<%= form_for(@answer, :method => 'delete') do |f| %>
    <%= f.hidden_field(:form_id, value: @answer.preference_form_id) %>

    <p> Are you sure that you wish to permanently delete your response to question: <%= @question %></p>
    <%= link_to("Go Back", answers_path(:user_id => $user_id, :form_id => @answer.preference_form_id)) %>
    <%= f.submit("Delete Response") %>
    
<% end %>